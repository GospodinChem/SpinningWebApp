@model RegisterViewModel​​
 
@{
    Layout = "Layouts/_AuthenticationPartial";
}

<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="/assets/css/styles.min.css"/>
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div
      class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                  <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                </a>
                <p class="text-center">Ус брат ме</p>
                <form id="registerForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>​
                  <div class="mb-3">
                    <label asp-for="FirstName" class ="form-label">Име</label>​
                    <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" />​                    
                    <span asp-validation-for="FirstName" class="text-danger"></span>​
                  </div>
                  <div class="mb-3">
                    <label asp-for="LastName" class ="form-label">Фамилия</label>​
                    <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" />​                    
                    <span asp-validation-for="LastName" class="text-danger"></span>​
                  </div>
                  <div class="mb-3">
                    <label asp-for="Email" class ="form-label">Имейл</label>​
                    <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />​                    
                    <span asp-validation-for="Email" class="text-danger"></span>​
                  </div>
                  <div class="mb-3">
                    <label asp-for="City" class ="form-label">Град</label>​
                    <input asp-for="City" class="form-control" autocomplete="city" aria-required="true" />​                    
                    <span asp-validation-for="City" class="text-danger"></span>​
                  </div>
                  <div class="mb-4">
                     <label asp-for="Password" class ="form-label">Парола</label>​
                     <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />​                     
                     <span asp-validation-for="Password" class="text-danger"></span>​
                  </div>
                  <div class="mb-4">
                     <label asp-for="PasswordRepeat" class ="form-label">Повтори парола</label>
                     <input asp-for="PasswordRepeat" class="form-control" autocomplete="new-password" aria-required="true" />​                     ​
                     <span asp-validation-for="PasswordRepeat" class="text-danger"></span>​
                  </div>
                  <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Регистрирай се</button>
                  <div class="d-flex align-items-center justify-content-center">
                    <p class="fs-4 mb-0 fw-bold">Вече имаш акаунт?</p>
                    <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold ms-2">Впиши се</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

   @section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
</body>

</html>
@model RegisterViewModel​​

<div class="row">​

    <div class="col-md-4">​

        <form id="registerForm" method="post">​

            <h2>Създай нов акаунт</h2>​

            <hr />​

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>​

            <div class="form-floating">​

                <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" />​

                <label asp-for="FirstName">Име</label>​

                <span asp-validation-for="FirstName" class="text-danger"></span>​

            </div>​

            <div class="form-floating">​

                <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" />​

                <label asp-for="LastName">Фамилия</label>​

                <span asp-validation-for="LastName" class="text-danger"></span>​

            </div>​

            <div class="form-floating">​

                <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />​

                <label asp-for="Email">Имейл</label>​

                <span asp-validation-for="Email" class="text-danger"></span>​

            </div>​

             <div class="form-floating">​

                <input asp-for="City" class="form-control" autocomplete="city" aria-required="true" />​

                <label asp-for="City">Град</label>​

                <span asp-validation-for="City" class="text-danger"></span>​

            </div>​

            <div class="form-floating">​

                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />​

                <label asp-for="Password">Парола</label>​

                <span asp-validation-for="Password" class="text-danger"></span>​

            </div>​

            <div class="form-floating">​

                <input asp-for="PasswordRepeat" class="form-control" autocomplete="new-password" aria-required="true" />​

                <label asp-for="PasswordRepeat">Повтори парола</label>​

                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>​

            </div>​

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Регистрирай се</button>​

        </form>​

    </div>
</div>
